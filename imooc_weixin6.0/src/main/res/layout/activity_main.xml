<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_bg">
        <yeeaoo.imooc_weixin60.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            yang:weixin_icon="@mipmap/ic_menu_start_conversation"
            yang:weixin_text="@string/app_name"
            yang:weixin_text_size="12sp"
            android:padding="5dp"
            yang:weixin_color="#ff45c01a"/>
        <yeeaoo.imooc_weixin60.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            yang:weixin_icon="@mipmap/ic_menu_friendslist"
            yang:weixin_text="@string/tab_contact"
            yang:weixin_text_size="12sp"
            android:padding="5dp"
            yang:weixin_color="#ff45c01a"/>
        <yeeaoo.imooc_weixin60.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            yang:weixin_icon="@mipmap/ic_menu_emoticons"
            yang:weixin_text="@string/tab_found"
            yang:weixin_text_size="12sp"
            android:padding="5dp"
            yang:weixin_color="#ff45c01a"/>
        <yeeaoo.imooc_weixin60.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            yang:weixin_icon="@mipmap/ic_menu_allfriends"
            yang:weixin_text="@string/tab_me"
            yang:weixin_text_size="12sp"
            android:padding="5dp"
            yang:weixin_color="#ff45c01a"/>
    </LinearLayout>
</LinearLayout>
