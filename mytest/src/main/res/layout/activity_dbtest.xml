<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/id_createDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建数据库"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/id_upDateDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新数据库"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/id_insertDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入数据"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/id_upDateDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新数据"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/id_deleteDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/id_queryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询数据"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/id_replaceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换数据"
        android:textSize="20sp"/>
</LinearLayout>